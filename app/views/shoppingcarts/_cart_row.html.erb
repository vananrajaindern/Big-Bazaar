<div class="well">


  <%= form_for order_item do |f| %>


  <h4><%= Product.find(order_item.product_id)[:title] %></h4>

  <%= f.hidden_field :product_id, value: product%>


  <div class="btn-group">
    <%= f.submit "Update Quantity", class: "btn btn-primary" %>
    <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.title}' from your cart?" }, method: :delete, class: "btn btn-danger" } %>
  </div>

</div>
<% end %>

